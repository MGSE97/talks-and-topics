<div class="col-6">
    <div class="row mb-3">
        <h4>Api Statistics</h4>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered table-hover table-responsive text-center">
                <thead>
                    <tr>
                        <th>Endpoint</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody id="api-data">
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    var requests = []
    var system = fetch
    var apiData = document.getElementById('api-data');
    window.fetch = (url, options) => {
        requests = [{ url, options }, ...requests.slice(0, 6)];
        apiData.innerHTML = requests.map(r => `
            <tr>
                <td>${r.option ? `POST` : `GET`} ${r.url}</td>
                <td>${r.options?.body || ''}</td>
            </tr>
        `).join('')
        return system(url, options)
    }
</script>